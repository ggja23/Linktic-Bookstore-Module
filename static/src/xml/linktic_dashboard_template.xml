<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="linktic_dashboard_template">
        <div class="row main-section" style="margin-left: 120px;">
            <!-- Total Sales Tile -->
            <div id="total_sales" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                 style="overflow: hidden; padding-top: 30px;">
                <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                display: flex; justify-content: center;" role="button">
                    <div class="oh-card-body"
                         style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                        <div class="stat-widget-one">
                            <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                <div style="background:#ff4d94; width:65px; text-align: center;">
                                    <i class="fa fa-shopping-cart text-mauve"
                                       style="font-size:50px;"/>
                                </div>
                                <div class="stat-content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                    <div class="stat_count_sales"
                                         style="font-size: 17px;">
                                        <span id="total_sales_data"/>
                                    </div>
                                    <div class="stat-head"
                                         style="font-size: 14px;">Total Sales
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Total Products Sold Tile -->
            <div id="total_products_sold" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                 style="overflow: hidden; padding-top: 30px;">
                <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                display: flex; justify-content: center;" role="button">
                    <div class="oh-card-body"
                         style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                        <div class="stat-widget-one">
                            <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                <div style="background:yellow; width:65px; text-align: center;">
                                    <i class="fa fa-box text-mauve"
                                       style="font-size:50px;"/>
                                </div>
                                <div class="stat-content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                    <div class="stat_count_products"
                                         style="font-size: 17px;">
                                        <span id="total_products_sold_data"/>
                                    </div>
                                    <div class="stat-head"
                                         style="font-size: 14px;">Total Products Sold
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Stock Levels Tile -->
            <div id="stock_levels" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                 style="overflow: hidden; padding-top: 30px;">
                <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                display: flex; justify-content: center;" role="button">
                    <div class="oh-card-body"
                         style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                        <div class="stat-widget-one">
                            <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                <div style="background:#00bfae; width:65px; text-align: center;">
                                    <i class="fa fa-cubes text-mauve"
                                       style="font-size:50px;"/>
                                </div>
                                <div class="stat-content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                    <div class="stat_count_stock"
                                         style="font-size: 17px;">
                                        <span id="stock_levels_data"/>
                                    </div>
                                    <div class="stat-head"
                                         style="font-size: 14px;">Stock Levels
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Recent Sales Tile -->
            <div id="recent_sales" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                 style="overflow: hidden; padding-top: 30px;">
                <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                display: flex; justify-content: center;" role="button">
                    <div class="oh-card-body"
                         style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                        <div class="stat-widget-one">
                            <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                <div style="background:#ff9800; width:65px; text-align: center;">
                                    <i class="fa fa-history text-mauve"
                                       style="font-size:50px;"/>
                                </div>
                                <div class="stat-content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                    <div class="stat_count_recent_sales"
                                         style="font-size: 17px;">
                                        <span id="recent_sales_data"/>
                                    </div>
                                    <div class="stat-head"
                                         style="font-size: 14px;">Recent Sales
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
